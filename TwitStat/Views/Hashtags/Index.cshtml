@model IEnumerable<TwitStat.Models.Hashtags>

@{
    ViewBag.Title = "Index";
}

<h2>Top Hashtags</h2>


<table class="table">
    <tr>
        <th>
            Hashtag
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Count)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            #@Html.DisplayFor(modelItem => item.HashtagText)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Count)
        </td>
        
    </tr>
}

</table>
